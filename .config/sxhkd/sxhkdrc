# If you dont know some keycode just run in terminal 'xev' command

# Open browser
#Super_L + w
#    st -e $BROWSER


# Lock screen
super + shift + grave
    slock

# Search for wi-fi
super + F8
    wifi > /dev/null && dwmref

## Increase volume
#XF86AudioRaiseVolume
#    amixer sset Master 5%+ && dwmref
#
## Decrease volume
#XF86AudioLowerVolume
#    amixer sset Master 5%- > /dev/null && dwmref
#
## Mute/Unmute
#XF86AudioMute
#    amixer sset Master toggle > /dev/null && amixer sset Speaker toggle > /dev/null && dwmref

# Mic mute/unmute
XF86AudioMicMute
    pactl set-source-mute 1 toggle > /dev/null && dwmref

# Touchpad toggle
super + F12
    touchpad_toggle

# Dmenu emoji
super + grave
    dmenuemoji

# Mount a USB drive or Android device
super + {F9,F10}
	{dmenumount,dmenuumount}

#brightness
XF86MonBrightnessDown
    xbacklight -dec 5

XF86MonBrightnessUp
    xbacklight -inc 5

# Volume control
super + minus
    amixer -q sset Master 5%- && pkill -RTMIN+10 i3blocks

super + equal
   amixer -q sset Master 5%+ && pkill -RTMIN+10 i3blocks

super + shift + minus
    pactl set-sink-mute 0 toggle && pkill -RTMIN+10 i3blocks

# Screenshots
shift + Print
    mkst copy
Print
    mkst save
