# If you dont know some keycode just run in terminal 'xev' command

# Lock screen
super + shift + grave
    slock

# Search for wi-fi
super + F8
    wifi > /dev/null && dwmref

# Touchpad toggle
super + F12
    touchpad_toggle

# Dmenu emoji
super + grave
    dmenuemoji

# Mount a USB drive or Android device
super + {F9,F10}
	{dmenumount,dmenuumount}

#brightness
XF86MonBrightnessDown
    xbacklight -dec 5
XF86MonBrightnessUp
    xbacklight -inc 5

# Volume control
super + minus
    amixer -q sset Master 5%- && pkill -RTMIN+10 $STATUSBAR
super + equal
   amixer -q sset Master 5%+ && pkill -RTMIN+10 $STATUSBAR
super + shift + minus
    pactl set-sink-mute 0 toggle && pkill -RTMIN+10 $STATUSBAR
XF86AudioMute
    pactl set-sink-mute 0 toggle && pkill -RTMIN+10 $STATUSBAR
XF86AudioMicMute
    pactl set-source-mute 1 toggle > /dev/null && dwmref

# Screenshots
shift + Print
    mkst copy
Print
    mkst save

# Pass manager
super + Tab
    passmenu

# Recording
super + Print
    dmenurecord
super + Delete
    dmenurecord kill

# Music control
super + m
    st -e ncmpcpp
alt + {comma,period}
    mpc {prev,next}
alt + p
    mpc toggle
alt + r
    mpc single
alt + s
    mpc stop
alt + bracketleft
    mpc seek -10
alt + shift + braceleft
    mpc seek -60
alt + bracketright
    mpc seek +10
alt + shift + braceright
    mpc seek +60

# open mailbox
super + shift + n
    st -e neomutt
