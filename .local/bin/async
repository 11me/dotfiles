#!/bin/sh

# Backups my data to my local server
# To get it to you have to specyfy ip of backup server in /etc/hosts file

# Example /etc/hosts
# 192.168.0.100    server

dox="/home/$USER/dox"
push_path="$SERVER:/home/$USER/backups"
pull_path="$SERVER:/home/$USER/backups/dox/"
success_msg="üí´ Successfully synced!"
random_error="‚ò† Some error occured..."
error_msg="‚ùå $dox does not exist"

case "$1" in
    push)
        if [ "$(ls -A "$dox")" ]; then
            (rsync -rpa --progress "$dox" "$push_path") || (notify-send -t 5000 "$random_error" && exit 0)
            notify-send "$success_msg"
        else
            notify-send -t 5000 "$error_msg"
        fi
        ;;

    pull)
        (rsync -rpa --progress "$pull_path" "$dox" && notify-send "$success_msg") || (notify-send -t 5000 "$random_error" && exit 0)
        ;;
    *)
        echo "async pushes data to local server or pulls from it"
        echo "USAGE: async push | pull"
esac
