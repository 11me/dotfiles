#!/bin/env bash

declare -a result

# read in array
# 0 - song name
# 1 - playing status
# 2 - volume and other params
get_status() {

  while read -r LINE
  do
    result+=("$LINE")
  done <<< "$(mpc)"
}

output() {
  local name="${result[0]}"
  local status="${result[1]}"
  local params="${result[2]}"
  local vol="$(echo $params | awk '{print $2}')"

  # if vol is NaN then make it 100%
  local re='^[0-9]+%'
  if ! [[ $vol =~ $re ]] ; then
     vol='100%'
  fi

  if [[ "$status" =~ playing|paused ]]; then
    status="$(echo "$status" | sed -E \
      "s/\[playing\]/ðŸŽµ/;\
      s/\[paused\]/â¸/;\
      s/\s+#[0-9]+\/[0-9]+\s+[0-9]+:[0-9]+\/[0-9]+:[0-9]+\s+\([0-9]+%\)//")"

    params="$(echo "$params" | sed -E \
      "s/volume:\s?[0-9]+%\s+//;\
      s/repeat: off\s+//;\
      s/repeat: on\s+/ðŸ” /;\
      s/random: off\s+//;\
      s/random: on\s+/ðŸ”€ /;\
      s/single: off\s+//;\
      s/single: on\s+/ðŸ”‚/;\
      s/consume: (off|on)//")"

    echo "$params $status $name ($vol)"
  else
    exit 0
  fi
}

get_status
output
