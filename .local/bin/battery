#!/bin/sh

# Show battery %
ICON="ðŸ”‹"
STATUS="$(cat /sys/class/power_supply/BAT0/status)"

if [ $STATUS == "Charging" ]
then
   ICON="ðŸ”Œ"
fi

#[ -f /sys/class/power_supply/BAT0/capacity ] && printf "$ICON%s" $(cat /sys/class/power_supply/BAT0/capacity)%
[ -f /sys/class/power_supply/BAT0/capacity ] && echo "$ICON$(cat /sys/class/power_supply/BAT0/capacity)%"
